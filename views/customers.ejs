<% layout('./layouts/layouts') %>
<style>
  @media screen and (min-width: 900px) {
    .container {
      width: 60%;
    }
  }
  img {
    height: 100%;
    width: 100%;
    border-radius: 50%;
  }
  .container {
    margin-top: 5rem;
  }
  .customer-container > div:nth-child(odd) {
    padding: 1rem;
    margin-left: -10vw;
    margin-right: 10vw;
    margin-top: 2rem;
    margin-bottom: 5rem;
  }
  .customer-container > div:nth-child(even) {
    padding: 1rem;
    margin-left: 10vw;
    margin-right: -10vw;
  }
  #head {
    font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
      "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
    text-align: center;
    padding: 2rem;
    color: #ffffff;
    text-decoration: underline wavy #a683e3;
  }
</style>
<h1 id="head">Our Customers</h1>
<div class="container customer-container">
  <% for(let c of customer) {%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-lg-4 col-md-6">
        <img src="img/<%= c.avatar %>" class="card-img-top" alt="..." />
      </div>
      <div class="col-md-6 col-lg-8">
        <div class="card-body pb-1 pb-sm-0">
          <h5 class="card-title" style="text-transform: capitalize">
            <b><%= c.username %></b>
          </h5>
          <p class="card-text"><%= c.about %></p>
          <a class="btn btn-outline-warning" href="/customer/<%= c._id %>"
            >Details..</a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
